@model MVC.ViewModels.RentalDTO

@using (Html.BeginForm("CreateRental", "Rentals", FormMethod.Get))
{
    <div class="row" style="height:200px;">
        <div class="form-inline">
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerId, htmlAttributes: new { @class = "control-label" })

                @Html.DropDownList("customerId", (SelectList)ViewBag.CustomersDropDown, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Select" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}