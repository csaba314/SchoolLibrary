        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Confirm" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", new { id = Model.ID }, new { @class = "btn btn-success" })
